/* pages/course/courlist/courlist.wxss */
.page{background: #fff;}
.cour{width: 100%;height: 300rpx;overflow: hidden;position: relative;margin-bottom: 10rpx;}
.cour image{width: 100%;height: 300rpx;display: block;}
.cour-tit{position: absolute;left: 40rpx;bottom: 50rpx;color: #fff;font-weight: bold;font-size: 15px;letter-spacing: 2rpx;}

.cour-bar{height: 80rpx;width: 698rpx;margin: 0 auto;overflow: hidden;}
.cour-bar view{width: 349rpx;height: 76rpx;float: left;font-size: 14px;text-align: center;line-height: 76rpx;border-bottom: 4rpx solid #ccc;}
.cour-bar view.act{border-bottom: 4rpx solid #4d95f1;color: #4d95f1;}

.jieshao,.mulu{padding: 25rpx;}
.mulu view{width: 698rpx;height: 80rpx;line-height: 80rpx;border-radius: 4rpx;box-shadow: 0 0 10px #eee;margin-bottom: 20rpx;text-indent: 20rpx;}